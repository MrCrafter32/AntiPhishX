generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId      String   @unique
  email        String   @unique
  name         String?
  integration  UserIntegration?
  isFirstLogin Boolean  @default(true)
}

model UserIntegration {
  id           String           @id @default(auto()) @map("_id") @db.ObjectId
  user         User             @relation(fields: [userId], references: [id])
  userId       String           @unique @db.ObjectId
  type         IntegrationType

  imapHost     String?
  imapPort     Int?
  imapSSL      Boolean?
  imapEmail    String?
  imapPassword String?

  googleRefreshToken  String?

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

enum IntegrationType {
  IMAP
  GOOGLE
}

model FalseAnalysisReport {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  emailBody String   // The body of the email being analyzed
  score     Float    // The confidence score from the analysis (0-100)
  label     String   // The prediction label (e.g., 'Phishing', 'Not Phishing')
  createdAt DateTime @default(now()) // Timestamp of when the report was created
}
